<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hundsun.demo.java.db.mybatis.UserMapper">

    <select id="getUser" resultType="com.hundsun.demo.java.db.mybatis.User">
        select name
        from user
        where id = #{id}
    </select>
</mapper>