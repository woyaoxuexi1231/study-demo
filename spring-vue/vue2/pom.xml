<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>spring-vue</artifactId>
        <groupId>com.hundsun</groupId>
        <version>1.0.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>vue2</artifactId>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <frontend-maven-plugin.version>1.11.0</frontend-maven-plugin.version>
    </properties>

    <profiles>
        <profile>
            <id>ui</id>
            <activation>
                <!-- 这个部分配置了该profile在默认情况下是激活的，即使没有明确指定profile id，这个profile也会被激活。 -->
                <activeByDefault>true</activeByDefault>
            </activation>
            <!-- build用于配置构建相关的信息 -->
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>dist</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>com.github.eirslett</groupId>
                        <artifactId>frontend-maven-plugin</artifactId>
                        <version>${frontend-maven-plugin.version}</version>
                        <executions>

                            <!-- 不指定安装node和npm,直接使用系统自带的 -->
                            <!--                             <execution> -->
                            <!--                                 <id>install node and npm</id> -->
                            <!--                                 &lt;!&ndash; 定义了要执行的目标。在这个例子中，目标是 install-node-and-npm，即安装 Node.js 和 npm。 &ndash;&gt; -->
                            <!--                                 <goals> -->
                            <!--                                     <goal>install-node-and-npm</goal> -->
                            <!--                                 </goals> -->
                            <!--                                 &lt;!&ndash; 指定要安装的 Node.js &ndash;&gt; -->
                            <!--                                 <configuration> -->
                            <!--                                     &lt;!&ndash; <npmVersion>10.5.0</npmVersion> &ndash;&gt; -->
                            <!--                                     &lt;!&ndash; <nodeVersion>v18.20.2</nodeVersion> &ndash;&gt; -->

                            <!--                                     &lt;!&ndash; <npmVersion>8.5.5</npmVersion> &ndash;&gt; -->
                            <!--                                     &lt;!&ndash; <nodeVersion>v14.17.3</nodeVersion> &ndash;&gt; -->
                            <!--                                 </configuration> -->
                            <!--                             </execution> -->

                            <!-- Install all project dependencies -->
                            <execution>
                                <id>npm install</id>
                                <!-- 目标是 npm，即运行 npm 命令。 -->
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <!-- optional: default phase is "generate-resources" -->
                                <!-- 指定在 generate-resources 阶段执行。 -->
                                <phase>generate-resources</phase>
                                <!-- Optional configuration which provides for running any npm command -->
                                <!-- 运行 npm install 命令以安装项目依赖。 -->
                                <configuration>
                                    <arguments>install</arguments>
                                </configuration>
                            </execution>

                            <!-- Build and minify static files -->
                            <execution>
                                <id>npm run build</id>
                                <!-- 目标是 npm，即运行 npm 命令。 -->
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <!-- 运行 npm run build 命令以构建和压缩静态文件。 -->
                                <configuration>
                                    <arguments>run build</arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
