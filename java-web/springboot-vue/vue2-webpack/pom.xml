<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.hulei</groupId>
        <artifactId>springboot-vue</artifactId>
        <version>1.0.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>vue2-webpack</artifactId>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <profiles>
        <profile>
            <id>ui</id>
            <activation>
                <!-- 这个部分配置了该profile在默认情况下是激活的，即使没有明确指定profile id，这个profile也会被激活。 -->
                <activeByDefault>true</activeByDefault>
            </activation>
            <!-- build用于配置构建相关的信息 -->
            <build>
                <plugins>
                    <!-- 这个插件在clean阶段会使用 -->
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>dist</directory>
                                </fileset>
                                <!--                                 <fileset> -->
                                <!--                                     <directory>node_modules</directory> -->
                                <!--                                 </fileset> -->
                            </filesets>
                        </configuration>
                    </plugin>
                    <plugin>
                        <!-- 这个插件的github文档明确指出了这个插件不支持使用本地的node进行构建,原文:Notice: This plugin does not support already installed Node or npm versions. Use the exec-maven-plugin instead. -->
                        <groupId>com.github.eirslett</groupId>
                        <artifactId>frontend-maven-plugin</artifactId>
                        <version>1.11.0</version>
                        <executions>

                            <!-- 不指定安装node和npm,直接使用系统自带的 -->
                            <execution>
                                <id>install node and npm</id>
                                <!-- 定义了要执行的目标。在这个例子中，目标是 install-node-and-npm，即安装 Node.js 和 npm。 -->
                                <goals>
                                    <goal>install-node-and-npm</goal>
                                </goals>
                                <!-- 指定要安装的 Node.js -->
                                <configuration>
                                    <npmVersion>10.7.0</npmVersion>
                                    <nodeVersion>v18.20.4</nodeVersion>
                                </configuration>
                                <!-- optional: default phase is "generate-resources" -->
                                <!-- 这个操作默认就在generate-resources这个极端,所以在compile的时候会安装node和npm -->
                                <phase>generate-resources</phase>
                            </execution>

                            <!-- Install all project dependencies -->
                            <execution>
                                <id>npm install</id>
                                <!-- 目标是 npm，即运行 npm 命令。 -->
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <!-- optional: default phase is "generate-resources" -->
                                <!-- 指定在 generate-resources 阶段执行。 -->
                                <phase>generate-resources</phase>
                                <!-- Optional configuration which provides for running any npm command -->
                                <!-- 运行 npm install 命令以安装项目依赖。 -->
                                <configuration>
                                    <arguments>install</arguments>
                                </configuration>
                            </execution>

                            <!-- Build and minify static files -->
                            <execution>
                                <id>npm run build</id>
                                <!-- 目标是 npm，即运行 npm 命令。 -->
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <!-- 运行 npm run build 命令以构建和压缩静态文件。 -->
                                <configuration>
                                    <arguments>run build</arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>