<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.hulei.common.security.mapper.RoleMapper">
    <select id="getRoleByUserId" resultType="org.hulei.common.security.pojo.Role">
        select *
        from role
        <where>
            <if test="userId != null">
                id in ( select role_id from user_role where user_id = #{userId} )
            </if>
        </where>
    </select>
</mapper>